@model FinalProject.Web.Models.Home.HomeViewModel

@{
    ViewData["Title"] = "Моите банкови сметки";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a asp-controller="Payment" asp-action="Create" class="btn btn-primary">
            Създай ново плащане
        </a>
    </div>

    @if (Model.BankAccounts == null || !Model.BankAccounts.Any())
    {
        <div class="alert alert-info">
            Все още нямате банкови сметки.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="thead-light">
                <tr>
                    <th>Номер на сметка</th>
                    <th>Баланс</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.BankAccounts)
                {
                    <tr>
                        <td>@account.AccountNumber</td>
                        <td>@account.Balance.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
